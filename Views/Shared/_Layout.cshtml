<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="main-containier">
        <header id="main-header">
        </header>
        <div id="navbar">
            <div>
               
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Classes", "Index", "Class")</li>
                    <li>@Html.ActionLink("Bookings", "Index", "Booking")</li>
                    @if ((Session["logged"] == null))
                    {
                        <li>@Html.ActionLink("Register", "Register", "Member")</li>
                        <li>@Html.ActionLink("Login", "login", "Member")</li>
                    } 
                    else{
                    <li>@Html.ActionLink("Log out", "LogOut", "Member")</li>
                    }


                </ul>
            </div>
        </div>
        <div>
            @RenderBody()
            <div id="footer">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - 219620873 Moyisi Kolweni</p>
                </footer>
            </div>

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
    